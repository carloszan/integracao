<% content_for :title do %>Criar Aluno<% end %>
<br>
<%= simple_form_for @student, url: create_students_path do |f| %>
<div class="large-5 large-centered columns">
  <h4>Cadastrar estudante:</h4>
  <%= f.input :name, placeholder: 'Digite o nome do usuario', label: false %>
  <%= f.input :email, placeholder: 'Digite o email do usuario', label: false %>
  <%= f.input :password, placeholder: 'Senha', label: false %>
  <%= f.input :password_confirmation, placeholder: 'Confirmar senha', label: false %>
  <%= f.input :tel, placeholder: 'Telefone', label: false %>
  <%= f.input :age, placeholder: "Idade", label: false %>
  <%= f.button :submit, "Cadastrar", class: "button expand"%>
<% end %>
</div>
